<html>
	<head>
		<title>Address</title>
		<style>
		html{
		background-image:linear-gradient(white,orange, lightgreen, white);
		background-repeat: no-repeat;
			font-size: 20px;
			border-color: brown;
		}
		td{
			text-align: center;
			padding: 5px;
			border: 2px solid blue;
		}		
		input{
			border-radius: 5%;
			padding: 3px;
			margin-bottom: 5px;
			width:auto;
			font-size:20px;
		}
		</style>
	</head>

	<body>

		<h1>Address</h1>

		<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search Your type..">

		<table id="myTable" border="1px" width="100%" height="auto">
			<tr>
				<th>REG_NO</th>
				<th>HOUSE NO</th>
				<th>LOCALITY</th>
				<th>CITY</th>
			</tr>

			
			<%data.forEach((address) => {%>

				<tr>
					<td><%=address.reg_num%></td>
					<td><%=address.house_no%></td>
					<td><%=address.locality%></td>
					<td><%=address.city%></td>
				</tr>
			<%})%>

		</table>

	</body>

</html>

<script>

function myFunction() {
	var filter = event.target.value.toUpperCase();
	var rows = document.querySelector("#myTable tbody").rows;

	for (var i = 0; i < rows.length; i++) {
		var firstCol = rows[i].cells[0].textContent.toUpperCase();
		var secondCol = rows[i].cells[1].textContent.toUpperCase();
		var thirdCol = rows[i].cells[2].textContent.toUpperCase();
		var fourthCol = rows[i].cells[3].textContent.toUpperCase();
		if (firstCol.indexOf(filter) > -1 || secondCol.indexOf(filter) > -1 || thirdCol.indexOf(filter) > -1 || fourthCol.indexOf(filter) > -1) {
			rows[i].style.display = "";
		} else {
			rows[i].style.display = "none";
		}      
	}
}
</script>
