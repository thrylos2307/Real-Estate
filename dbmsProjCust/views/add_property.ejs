        }
    </style>
</head>

<body>

    <div class="login-form">
        <h1>add the data</h1>
        <form action="/add_property" method="POST">
            <input type="text" name="reg_num" placeholder="reg_num" required>

            <input type="text" name="address" placeholder="address" required>
            <input type="text" name="ownerName" placeholder="ownerName" required>
            <input type="text" name="price" placeholder="price" required>
            <input type="text" name="type" placeholder="type" required>
            <input type="text" name="bathrooms" placeholder="bathrooms" required>
            <input type="text" name="bedrooms" placeholder="bedrooms" required>
            <input type="text" name="size" placeholder="size" required>
            <input type="submit" value="ADD">

        </form>
    </div>
</body>

